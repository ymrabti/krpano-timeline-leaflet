<krpano showerrors="false" onstart="streetview_startup();" debugmode="true">

    <include url="skin/vtourskin.xml" />

    <view fovtype="MFOV"
          fov="90"
          fovmin="50"
          fovmax="120"
          limitview="fullrange"
          vlookatmin="-50"
          vlookatmax="50" />

    <control mousetype="drag2d" />


    <!-- ^^^^^^^^^^^^^^^ -->
    <!-- Plugins section -->
    <!-- _______________ -->


    <!-- Streetview plugin-->
    <include url="plugins/streetview/xml/streetview.xml" />
    <plugin name="streetview"
            alturl="plugins/streetview/streetview.js"
            devices="html5"
            keep="true"
            parent="streetview_tm_control"
            align="right"
            x="20"
            y="0"
            width="100"
            height="25"
            visible="false"
            pan="36"
            tilt="3.7"
            zoom="120"
            viewconfig="relative"
            pano="360_0012.JPG"
            show_permalink="false"
            show_print="false"
            show_timeline="true"
            hide_menu="false"
            timeline="2"
            timelinelabel="Historique"
            panonotinbatchlabel="Misconfiguration in krpano.xml: Start panorama $1 must belong to start timeline $2, but does not."
            companyurl="https://sdmb.ma/"
            companydesc="SDMB Streetview"
            infourl="https://sdmb.ma/"
            infodesc="SDMB"
            permalinklabel="SDMB"
            logoutlabel="Log out" />


    <!-- Leafletmap plugin -->
    <plugin name="leafletmap"
            type="container"
            alturl="%BASEDIR%/plugins/leafletmap/leafletmap.js"
            devices="html5"
            keep="true"
            align="bottomleft"
            x="10"
            y="70"
            y_opened="90"
            y_closed="30"
            width="33%"
            height="40%"
            zorder="800"
            visible="true"
            btn_visible="true"
            environment="">
        <mapoptions zoom="16"
                    maxzoom="16"
                    startcenter="startpano"
                    iconcommonsize="[12,12]"
                    mapproviderurl="http://a.tile.openstreetmap.org/{z}/{x}/{y}.png"
                    mapproviderkey=""
                    mapproviderstyleid=""
                    attributionline="" />
        <radar visible="true" radiuspercent="25" strokecolor="#fff" fillcolor="#333" />
    </plugin>

</krpano>